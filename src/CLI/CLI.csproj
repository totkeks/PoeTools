  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FileTypes\FileTypes.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(RuntimeIdentifier)'=='win-x64'">
    <None Include="..\..\lib\libooz.dll" Link="libooz.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

