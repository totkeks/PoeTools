    <!-- TODO: there is a bug in the compiler that fails to resolve the correct DLL when running the exe
    <TargetName>CLI</TargetName>
    <AssemblyName>poetool</AssemblyName>
    -->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DotNet.Glob" Version="3.1.0" />
